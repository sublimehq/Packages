# ESCAPE TESTS
[escapes]
    quoted = "\\ \" \b \n \t"
#^^^^^^^^^^^^^^^^^^^^^^^^^ meta.key-value-pair
#   ^^^^^^ variable.other.readwrite
#          ^ keyword.operator.assignment
#            ^^^^^^^^^^^^^^^^ meta.value string.quoted.double
#             ^^ constant.character.escape
#                ^^ constant.character.escape
#                   ^^ constant.character.escape
#                      ^^ constant.character.escape
#                         ^^ constant.character.escape
    unquoted = \\ \" \b \n \t \
#              ^^ constant.character.escape
#                 ^^ constant.character.escape
#                    ^^ constant.character.escape
#                       ^^ constant.character.escape
#                          ^^ constant.character.escape
#                             ^ constant.character.escape
    trailing-slash = \  # comments not legal after trailing slash
#                    ^^ invalid.illegal.escape

