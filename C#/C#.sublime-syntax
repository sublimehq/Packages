    - match: \b(checked|unchecked)\b
      scope: keyword.other.cs
      push:
        - match: \(
          scope: punctuation.definition.block.begin.cs
          set:
            - match: \)
              scope: punctuation.definition.block.end.cs
              pop: true
            - include: line_of_code_in
