      scope: punctuation.definition.string.raw.begin.cs
      push: long_string

    # interpolated multi-line strings
    - match: '(@\$|\$@)"'
      scope: punctuation.definition.string.interpolated.begin.cs
      push: long_format_string

    - match: '{{name}}(<)(?=[^(]*>\()'
      captures:
        0: meta.function-call
