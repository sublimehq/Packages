      push:
        - match: ','
          scope: punctuation.separator.type.cs
        - match: '>'
          scope: punctuation.definition.arguments.type.end.cs
          pop: true
        - include: type
    - match: '{{name}}(<)'
      captures:
        1: variable.other.type.cs
