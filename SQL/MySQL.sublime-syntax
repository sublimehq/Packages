      scope: storage.modifier.sql
    - match: \b(?i:sql\s+security)\b
      scope: storage.modifier.sql
    - match: \b(?i:definer|invoker)\b
      scope: constant.language.user.sql
    - match: \b(?i:soname)\b
      scope: keyword.other.ddl.sql
    - include: comment-keywords

###[ INDEX EXPRESSIONS ]#######################################################

  index-algorithm-args:
